.light-skin .page-content {
  background-color: #fcfcfc;
  box-shadow: 0 12px 15px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
  border-radius: 2px;
}

.page-content {
  padding: 20px !important;
}

.create-invoice #add-row {
  color: #00695c;
}

.create-invoice #delete-all-rows {
  color: #D32F2F;
}

.page-content {
  padding-top: 20px !important;
}

#invoice-details {
  margin-top: 40px;
}

.expanding-card {
  top: 60px;
  left: 0px;
  right: 0px;
  width: 124px;
  max-width: 124px;
  height: 34px;
  margin: auto;
}

.expanding-card.expand {
  height: 570px;
  width: 90%;
  max-width: 600px;
}

.expanding-card .button-expand {
  width: 124px;
  height: 34px;
  line-height: 34px;
}

.expanding-card .button-expand.expand {
  width: 280px;
  font-size: 24px;
  color: #eceffa;
  text-transform: none;
  padding: 18px 20px 0;
  transition: all 0.9s cubic-bezier(0.4, 0, 0.2, 1);
}

.expanding-card .btn-close {
  line-height: 5px;
}

.expanding-card .content .body {
  height: 300px;
  overflow-y: scroll;
  padding-bottom: 40px !important;
}

.expanding-card .header {
  height: 90px;
}

.expanding-card .ec-footer {
  height: 40px;
}

.expanding-card #contactType {
  position: relative;
  width: 280px;
  background-color: transparent;
}

.expanding-card #contactType label {
  color: #fff;
}

.expanding-card #contactType .btn.theme {
  background-color: rgba(0, 0, 0, 0.4) !important;
}

.expanding-card #contactType:before {
  content: "OR";
  position: absolute;
  top: -2px;
  left: calc(50% - 15px);
  width: 29px;
  background-color: #fcfcfc;
  font-size: 11px;
  text-align: center;
  color: #222;
  border-radius: 50%;
  margin: auto;
  padding: 6px;
  z-index: 2;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
}

.expanding-card .nav-tabs > li > a,
.expanding-card .nav-tabs > li.active > a {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.8) !important;
  text-transform: uppercase;
  padding: 14px;
}

.expanding-card .tab-active-border {
  background-color: rgba(0, 0, 0, 0.7) !important;
  bottom: 2px;
}

.expanding-card .form-group.select {
  padding: 0;
}

.expanding-card .link-button {
  background-color: rgba(0, 0, 0, 0.3);
  color: rgba(250, 250, 250, 0.8) !important;
  font-size: 14px;
}

.expanding-card .dropup .bootstrap-select .dropdown-menu {
  top: auto;
}

@media only screen and (min-width: 768px) {
  .invoicing-page .delete-invoice-row .btn-flat {
    padding-top: 4px !important;
  }
  .invoicing-page .delete-invoice-row .btn-flat:after {
    display: none;
  }
}

@media only screen and (min-width: 480px) {
  .invoicing-page #invoice-details, .invoicing-page .iv-create-products-table {
    box-shadow: none;
  }
  .invoicing-page #ivDetailsWrapper {
    float: right;
  }
  .invoicing-page #ivDetailsWrapper .value {
    float: right;
  }
  .invoicing-page .iv-create-products-table {
    margin-top: 40px;
  }
}

@media only screen and (max-width: 480px) {
  .invoicing-page .create-invoice {
    padding: 0;
  }
  .invoicing-page .ci-header {
    padding: 20px 12px;
  }
  .invoicing-page #ivDetailsWrapper {
    margin-top: 20px;
    margin-left: 12px;
  }
  .invoicing-page #ivDetailsWrapper .value {
    margin-left: 10px;
  }
  .invoicing-page .expanding-card.expand {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    margin: auto;
  }
}

@media only screen and (max-width: 768px) {
  .invoicing-page #invoice-details .invoice-title {
    margin-top: 20px !important;
  }
  .invoicing-page .iv-create-products-table {
    padding-top: 30px;
  }
  .invoicing-page .iv-create-products-table .table-block-responsive tbody td:before {
    padding-top: 17px !important;
  }
  .invoicing-page .iv-create-products-table .table-block-responsive tbody td:last-child:before {
    content: attr(data-title) ": ";
    display: none;
  }
  .invoicing-page .iv-create-products-table .delete-invoice-row button {
    width: 100%;
    margin-bottom: 10px;
  }
  .invoicing-page .iv-create-products-table .delete-invoice-row button i:before {
    display: none;
  }
  .invoicing-page .iv-create-products-table .delete-invoice-row button i:after {
    content: "delete this row";
    font-family: "Roboto";
    font-size: 13px;
    text-transform: uppercase;
  }
}

.light-skin .invoice-preview {
  color: #212121;
}

.light-skin .expanding-card .content .body {
  color: #212121;
}

.dark-skin .iv-create-products-table #add-row {
  color: #1de9b6;
}

.dark-skin .iv-create-products-table #delete-all-rows {
  color: #ff4081;
}
