.theme-dark {
  background-color: #eee !important;
}

.lockscreen-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  overflow: hidden;
}

.lockscreen-header {
  text-shadow: 1px 2px 3px rgba(0, 0, 0, 0.3);
  font-weight: 300;
  -webkit-font-smoothing: antialiased !important;
  opacity: 0.8;
  margin: 10px 0;
  font-size: 56px;
}

.lockscreen-username {
  color: #9294AE;
  font-weight: 300;
  letter-spacing: 2px;
  text-shadow: 1px 3px 5px rgba(0, 0, 0, 0.1);
}

.lockscreen-item {
  padding: 0;
  position: relative;
  margin: 10px auto;
  width: 290px;
}

.lockscreen-item input {
  background-color: rgba(255, 255, 255, 0.5);
}

.lockscreen-link {
  color: #9294AE !important;
  font-size: 13px;
  text-transform: none;
}

@media (max-width: 768px) {
  .ecorner_1, .ecorner_2 {
    display: none;
  }
}
