@model IEnumerable<C8.eServices.Mvc.Models.ApplicationRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h4>@ViewBag.ApplicationName Roles</h4>
<hr />

@*<p>
    @Html.ActionLink("Add New Role", "Create", new { id = @ViewBag.ApplicationId })
</p>*@

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#rolesCollapse">
                   Roles Information
                </a>
            </h4>
        </div>
        <div id="rolesCollapse" class="panel-collapse collapse in">
            <div class="panel-body">
                 <div class="col-md-8" align="left">
                    @Html.ActionLink("Add New Role", "Create", new { id = @ViewBag.ApplicationId }, new {@class = "btn btn-primary"})
                 </div>
                <table class="table table-striped" id="table"
                       data-toggle="table"
                       data-height="500"
                       data-search="true"
                       data-pagination="true"
                       data-page-list="[10,25, 50, 100, ALL]">
                    <thead>
                        <tr>
                            @*<th>
                                @Html.DisplayName("Role ID")
                            </th>*@
                            <th>
                                @Html.DisplayName("Role Name")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.RoleId)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdentityRole.Name)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Application", null, new{@class = "btn btn-primary"})
</div>

