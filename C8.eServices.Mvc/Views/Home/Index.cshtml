@model C8.eServices.Mvc.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>

    span {
        height: 30px !important;
        font-size: 14px !important;
    }

    input {
        height: 30px !important;
        font-size: 12px !important;
    }

    .has-error {
        border: 1px solid red !important;
    }
</style>

<div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-5">
                <div class="row" id="loginButtons">
                    <div class="form-group" style="margin-top:150px!important">
                        <div class="col-sm-12 text-center">
                            <a onclick="$.fn.ShowButtons('')" class="btn btn-md col-sm-5" style="background-color: #004785 !important;border-radius:10px;color:#fff!important">Ekurhuleni Login</a>
                            <a href="../Home/WayleaveLogin" class="btn btn-md col-sm-6" style="background-color: #004785 !important;border-radius:10px;color:#fff!important;margin-left:5px!important">Wayleave Account Login</a>
                        </div>
                    </div>
                </div>
                <div class="row" id="loginPage" style="display:none!important">
                    <div class="panel panel-default" style="margin-top:150px!important">
                        <div class="panel-heading text-center bg-green-custom" style="border-top-left-radius: 15px !important;border-top-right-radius: 15px !important;border:0px!important;height:50px!important;padding-top:5px!important;">
                            <h4> Ekurhuleni Login </h4>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-lg-12 col-lg-offset-0">
                                        <div class="form-group" style="margin:10px;">
                                            <div class="input-group">
                                                <span class="input-group-addon bg-green-custom bradius">
                                                    <img src="~/Content/wayleaveStyles/assets/Images/Asset 38@4x.png" width="18" height="18" />
                                                </span>
                                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control bradius", @required = true, autocomplete = "off", autofocus = "on", name = "userName", placeholder = "Enter user name" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-lg-offset-0">
                                        <div class="form-group" style="margin:10px;">
                                            <div class="input-group">
                                                <span class="input-group-addon bg-green-custom" @*onclick="showPassword()"*@ @*ng-click="showPassword()"*@>
                                                    <i class="fa fa-key"></i>
    @*<img src="~/Content/wayleaveStyles/assets/Images/Asset 37@4x.png" width="20" height="15" />*@
                                                </span>
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control bradius", @required = true, @autocomplete = "new-password", autofocus = "on", id = "pass", name = "password", placeholder = "Enter password" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-lg-offset-0">
                                        <div class="form-group pull-left" style="margin:5px;padding-left:10px!important;color:#006940 !important">
                                            <p data-toggle="modal" data-target="#modalForgotPassword" onclick="$.fn.forgotPassword()" style="cursor:pointer;display:none!important">Forgot password </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12 text-center">
                                        <button type="submit" class="btn bg-blue btn-md btn-custom" onclick="$.fn.showLoader()" style="background-color: #004785 !important">
                                            <i id="isLoading" class="fa fa-spinner fa-spin" style="font-size:9pt;display:none"></i>&nbsp;Log in
                                        </button>
                                        <button type="button" onclick="$.fn.ShowButtons('Y')" class="btn bg-green-custom btn-md btn-custom" style="color:white!important;">
                                            Cancel
                                        </button>
                                    </div>
                                </div>
                                @*<div class="row">
                                    <div class="col-sm-12 text-center">
                                        <a href="#" class="Anch_Back" onclick="$.fn.ShowButtons('Y')"><i class="fa fa-arrow-left"></i>&nbsp;Back to Home</a>
                                    </div>
                                </div>*@
                            }

                        </div>
                        @if (TempData["LoginError"] != null)
                        {
                            <div class="alert alert-danger" id="loginError" style="color:#fff!important">
                                <a href="#" class="close" data-dismiss="alert">&times;</a>
                                <strong>Error!</strong> @TempData["LoginError"]
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    <!--Forgot password modal popup-->
    <div class="modal fade in" id="modalForgotPassword">
        <div class="modal-dialog" style="top:25% !important">
            <div class="modal-content" style="border: 1px solid #1E8449!important;">
                <div class="modal-header"
                     style="border-bottom-color: #1E8449!important;background-color: #1E8449!important;color: white;margin: 0 !important;font-size: 16px;">
                    <h4 class="modal-title text-left">Forgot password</h4>
                </div>
                <div class="modal-body">
                    <div class="panel-body">
                        <div class="panel-group" style="padding: 2px;">
                            <div class="panel panel-default">
                                <input type="text" class="form-control" placeholder="enter your email" name="forgotEmail">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="border:none">
                    <button type="button" class="btn bg-green-custom" onclick="$.fn.forgotAccountPassword()" style="color:#fff!important"><i class="fa fa-send" @*ng-show="isForgotLoading"*@></i> <i class="fa fa-spin fa-spinner" style="display:none"></i>&nbsp;Send</button>
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#loginButtons").show();
        $("#loginPage").hide();
        var tempdata = '@TempData["LoginError"]';
        if (tempdata != null && tempdata != "") {
            $("#loginButtons").hide();
            $("#loginPage").fadeToggle();
        }

        //Show Login form
        $.fn.ShowButtons = function (val) {
            $.fn.loadLoginPages(val);
            $("#loginError").hide();
        }

        $.fn.loadLoginPages = function (val) {
            $("#loginPage").fadeToggle();
            $("#loginButtons").hide();
            if (val) {
                $("#loginButtons").show();
                $("#loginPage").hide();
            }
        }

        $.fn.showLoader = function() {
            $("#isLoading").show();
        }
    });
    function showPassword() {
        var x = document.getElementById("pass");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
