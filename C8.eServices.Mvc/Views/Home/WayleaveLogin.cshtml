@model C8.eServices.Mvc.ViewModels.LoginViewModel
@{
    ViewBag.Title = "WayleaveLogin";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style>

    span {
        height: 30px !important;
        font-size: 14px !important;
    }

    input {
        height: 30px !important;
        font-size: 12px !important;
    }

    .has-error {
        border: 1px solid red !important;
    }
</style>
<script src="~/Scripts/wayleaveScripts/ForgotPassword.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-5">
            <div class="panel panel-default" style="margin-top:150px!important">
                <div class="panel-heading text-center bg-green-custom" style="border-top-left-radius: 15px !important;border-top-right-radius: 15px !important;border:0px!important;height:50px!important;padding-top:5px!important;">
                    <h4> Wayleave Account Login </h4>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("WayleaveLogin", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-lg-12 col-lg-offset-0">
                                <div class="form-group" style="margin:10px;">
                                    <div class="input-group">
                                        <span class="input-group-addon bg-green-custom bradius">
                                            <img src="~/Content/wayleaveStyles/assets/Images/Asset 38@4x.png" width="18" height="18" />
                                        </span>
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control bradius", @required = true, autocomplete = "off", autofocus = "on", name = "userName", placeholder = "Enter user name" })
                                        @*<input class="form-control bradius" autocomplete="off" name="userName" placeholder="Enter user name" required>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-lg-offset-0">
                                <div class="form-group" style="margin:10px;">
                                    <div class="input-group">
                                        <span class="input-group-addon bg-green-custom" onclick="showPassword()">
                                            <img src="~/Content/wayleaveStyles/assets/Images/Asset 37@4x.png" width="20" height="15" />
                                        </span>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control bradius", @required = true, @autocomplete = "new-password", autofocus = "on", id = "pass", name = "password", placeholder = "Enter password" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-lg-offset-0">
                                <div class="form-group pull-left" style="margin:5px;padding-left:10px!important;color:#006940 !important">
                                    <p data-toggle="modal" data-target="#modalForgotPassword" ng-click="forgotPassword()" style="cursor:pointer">Forgot password </p>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 text-center">
                                <button type="submit" onclick="showLoader()" class="btn bg-blue btn-md btn-custom" style="background-color: #004785 !important">
                                    <i id="isLoading" class="fa fa-spinner fa-spin" style="font-size:9pt;display:none"></i>&nbsp;Log in
                                </button>
                                <a href="../">
                                    <button type="button" class="btn bg-green-custom btn-md btn-custom" style="color:white!important">
                                        Cancel
                                    </button>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-2 text-center">

                            </div>
                            @*<div class="col-sm-4 text-center">
                                    <a href="../" class="Anch_Back"><i class="fa fa-arrow-left"></i>&nbsp;Back to Home</a>
                                </div>*@
                            <div class="col-sm-8 text-center">
                                <a href="../WayleaveAccount/WayleaveAccount" class="Anch_Back"><i class="fa fa-user"></i>&nbsp;Register</a>
                            </div>
                            <div class="col-sm-2 text-center">

                            </div>
                        </div>                    }
                </div>
                @if (TempData["LoginError"] != null)
                {
                    <div class="alert alert-danger" style="color:#fff!important">
                        <a href="#" class="close" data-dismiss="alert">&times;</a>
                        <strong>Error!</strong> @TempData["LoginError"]
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="modal fade in" id="modalForgotPassword" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" style="top:25% !important">
            <div class="modal-content" style="border: 1px solid #1E8449!important;">
                <div class="modal-header" style="border-bottom-color: #1E8449!important;background-color: #1E8449!important;color: white;margin: 0 !important;font-size: 16px;">
                    <h4 class="modal-title text-left">Forgot password</h4>
                </div>
                <div class="modal-body">
                    <div class="panel-body">
                        <div class="panel-group" style="padding: 2px;">
                            <div class="panel panel-default">
                                <input type="email" class="form-control" onkeyup="$.fn.validateEmail('forgotPasswordEmail')" placeholder="enter your email" id="forgotPasswordEmail" name="forgotPasswordEmail">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="border:none">
                    <button type="button" class="btn bg-green-custom" onclick="forgotAccountPassword()" style="color:#fff!important"><i class="fa fa-send" id="IsShowLoader1"></i> <i class="fa fa-spin fa-spinner" id="IsShowLoader" style="display:none"></i>&nbsp;Send</button>
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        var result = '@TempData["changePasswordResult"]';
        //alert(result);
        if (result != "" && result != undefined) {

            toastr.success(`Password changed successfully`, "Success", {
                "timeOut": "10000",
                "extendedTImeout": "20000",
                "closeButton": true,
            });
        }

        $("#loginButtons").show();
        $("#loginPage").hide();
    });

    function showLoader() {
        $("#isLoading").show();
    }
    function showPassword() {
        var x = document.getElementById("pass");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>