@{
    ViewBag.Title = "Statistics";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h4>Rates Rebate Statistics</h4>
<hr />

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#applicationsCollapse">
                    Rates Rebate Application Statistics - @DateTime.Now
                </a>
            </h4>
        </div>
        <div id="applicationsCollapse" class="panel-collapse collapse in">
            <div class="panel-body">
                <table class="table table-striped" id="applicationsTable"
                       data-toggle="table"
                       data-url="@Url.Action("LoadStatistics", "RatesRebateBackOffice")"
                       data-query-params-type="Else"
                       data-side-pagination="server"
                       data-height="300">
                    <thead>
                    <tr>
                        <th data-field="Pending">Pending</th>
                        <th data-field="Submitted">Submitted</th>
                        <th data-field="Received">Received</th>
                        <th data-field="InQuery">In Query</th>
                        <th data-field="Declined">Declined</th>
                        <th data-field="Approved">Approved</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    setTimeout(function() {
        location.reload();
    },60000);
</script>






