<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        var userRole = '@Session["ekurhuleniUserRole"]';
        //alert(userRole);
        if (userRole ==="Admin") {
            $.fn.LoadApplicationsAlertsWithCounts("Y", userRole);
        }
        else {
            $.fn.LoadApplicationsAlertsWithCounts("N", userRole)
        }
        //Init();

        $.fn.showLoader = function () {
            $("#isLoading").show();
        }
    });
</script>
<script src="~/Scripts/wayleaveScripts/ApplicationStatusList.js"></script>
<div>
    <section class="content" style="padding-right: 0;padding-top:0;" @*ng-init="LoadApplicationsWithCounts()"*@>
        <div style="background-color:#e0e0e0!important;margin-top:4px">
            <h4 class="text-center">PPW Certificate List</h4>
            <div class="row">
                @using (Html.BeginForm("ApplicationStatusList", "WL", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <table>
                        <tr>
                            <td style="padding-left:20px!important">
                                @Html.TextBox("searchKeyword",null, new { @class = "form-control bradius", @required = true, autocomplete = "off", autofocus = "on", name = "searchKeyword", placeholder = "Enter application number" })
                            </td>
                            <td>
                                <button type="submit" class="btn btn-sm btn-green-custom" onclick="$.fn.showLoader()" style="color:#fff!important;">
                                    <i id="isLoading" class="fa fa-spinner fa-spin" style="font-size:9pt;display:none"></i>&nbsp;<i class="fa fa-search"></i>
                                </button>
                            </td>
                        </tr>
                    </table>
                }
            </div>
            <table class="table table-striped table-hover tabel-condensed" style="font-size: 11px;">
                <thead style="background-color:#00A65A !important; font-size:11px !important;color:#fff !important;margin-bottom: 0;">
                    <tr>
                        <td style="width:5% !important" ng-click="sort('NAME')"
                            ng-class="sortClass('NAME')">
                            <a class="anchor_sorting" href="">
                                ID
                            </a>&nbsp;
                        </td>
                        <td style="width:13% !important" ng-click="sort('NAME')"
                            ng-class="sortClass('NAME')">
                            <a class="anchor_sorting" href="">
                                Application Number
                            </a>&nbsp;
                        </td>
                        <td style="width:13% !important" ng-click="sort('STATUS')"
                            ng-class="sortClass('STATUS')">
                            <a class="anchor_sorting" href="">
                                Step Status
                            </a>&nbsp;
                        </td>
                        <td style="width:13% !important" ng-click="sort('NAME')"
                            ng-class="sortClass('NAME')">
                            <a class="anchor_sorting" href="">
                                Name
                            </a>&nbsp;
                        </td>
                        @*<td style="width:12% !important" ng-click="sort('CREATED_DATE')"
                            ng-class="sortClass('CREATED_DATE')">
                            <a class="anchor_sorting" href="">
                                Immediate Attention
                            </a>&nbsp;
                        </td>*@


                        <td style="width:10% !important" ng-click="sort('CREATED_DATE')"
                            ng-class="sortClass('CREATED_DATE')">
                            <a class="anchor_sorting" href="">
                                Created On
                            </a>&nbsp;
                        </td>
                        <td style="width:10% !important">
                            <a class="anchor_sorting" href="">

                            </a>&nbsp;
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in (List<C8.eServices.Mvc.Models.Mapings.ApplicationFormDashboardView>)ViewBag.ApplicationStatusList)
                    {
                        <tr
                            style="border-collapse:collapse;">
                            <td style="width:5% !important">
                                <a style="cursor: pointer;"
                                   class="ggb-a"><u>  @app.id</u></a>
                            </td>
                            <td style="width:15% !important">
                                @app.applicationNumber
                            </td>
                            <td style="width:13% !important">
                                <div style="color:green">
                                    <a onclick="OpenWayleaveApplicationForm(@app.id)"
                                       style="cursor: pointer;color:green"><u>  Application Granted</u></a>
                                </div>
                            </td>
                            <td style="width:13% !important">
                                @app.full_name
                            </td>
                            @*<td style="width:12% !important">
                                @if (app.wayleaveAttention == "Yes")
                                {
                                    <div style="color:red">
                                        <span class="fa fa-flag" style="color:red;font-size: 14px !important;"></span>
                                        @app.wayleaveAttention
                                    </div>
                                }
                                else
                                {
                                    <div style="color:blueviolet">
                                        <span class="fa fa-flag" style="color:blueviolet;font-size: 14px !important;"></span>
                                        @app.wayleaveAttention
                                    </div>
                                }
                            </td>*@
                            <td style="width:8% !important">
                                @app.createdDate
                            </td>
                            <td style="width:13% !important">
                                <button type="button" class="btn btn-sm btn-ggb-orange" onclick="$.fn.downloadCertificate('loaderId'+@app.id,'cloudId'+@app.id,@app.id)"><i class="fa fa-spin fa-spinner" id="@("loaderId"+app.id)" style="display:none!important"></i> <i class="fa fa-cloud-download" id="@("cloudId"+app.id)"></i>&nbsp;Certificate</button>

                            </td>
                        </tr>
                    }
                </tbody> 
                
                @if (ViewBag.ApplicationStatusListCount == 0)
                {
                    <tbody>
                        <tr>
                            <td colspan="7" class="text-center">
                                @*<i class="fa fa-spinner fa-spin text-green" style="font-size:10pt;color:#006940!important"></i>*@<i class="fa fa-spinner fa-spin text-green" style="font-size:10pt;color:#006940!important"></i>
                                <b class="text-red">No result found!</b>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </section>
</div>


