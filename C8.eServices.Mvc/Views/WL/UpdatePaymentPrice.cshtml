<script src="~/Scripts/wayleaveScripts/AddDepartmentUsers.js"></script>
<script type="text/javascript" language="javascript">   
    $(document).ready(function () {
        var departmentName = '@Session["ekurhuleniUserDeptName"]';      
        var userName = '@Session["ekurhuleniUserName"]';
        var userRole = '@Session["ekurhuleniUserRole"]';
        $("#CurrentUserName").val(userName);
        //alert(userRole);
        if (userRole ==="Admin") {
            $.fn.LoadApplicationsAlertsWithCounts("Y");
        }
        else {
            $.fn.LoadApplicationsAlertsWithCounts("N")
        }
    });
</script>
<section class="content" style="padding-right: 0;padding-top:0;margin-top:-10px!important">
    <form name="PaymentForm">
        <div class="panel-group" style="margin-left: -25px;height:400px!important;
        margin-bottom: 3px !important;">
            <div class="panel panel-default" style="border:none!important">
                <div class="panel-heading" style="background:#00A65A;padding-top:5px!important">
                    <h4 class="panel-title text-center" style="font-size:16pt!important">
                        Update Application Price
                        @if (ViewBag.ApplicationPrice != null)
                        {
                            <b class="pull-right" style="font-size:10pt!important;background-color:#fff!important;padding:5px!important;margin-top:-2px!important;border-radius:3px!important;color:#cc0c00!important">Application Price:R @ViewBag.ApplicationPrice</b>
                        }
                    </h4>
                </div>
                <div style="border:1px solid #00A65A;height:300px!important">
                    <div class="panel-body" style="padding: 5px!important;padding-top:50px!important">
                        <table>
                            <tr>
                                <td style="width:  15.5%">
                                </td>
                                <td style="width:  15.5%" colspan="2">
                                    <div class="input-group input-label" style="width: 100%">
                                        <label class="control-label">Application Price</label>
                                        <input type="number" style="border-radius: 4px" id="APPLICATION_PRICE" required
                                               class="form-control" name="APPLICATION_PRICE" />
                                    </div>
                                </td>
                                <td style="width:  15.5%">
                                </td>
                            </tr>
                        </table>
                        <table width="100%" style="margin-top:10px!important">
                            <tr>
                                <td colspan="4" class="text-center" id="isNewApplication">
                                    <button type="button" class="btn btn-green-custom" style="height: 24px; width: 100px; padding: 0; font-size: 11px;color:#fff!important" onclick="$.fn.UpdatePaymentPrice()">
                                        <i id="isAppLoading" class="fa fa-spinner fa-spin" style="display:none!important"></i>
                                        Update
                                    </button>
                                    <a href="../WL/Index"><button type="button" class="btn btn-success" style="background-color: #cc0c00 !important; height: 24px; width: 100px; padding: 0; font-size: 11px">Cancel</button></a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="CurrentUserDepartmentName" />
        <input type="hidden" id="CurrentUserName" />
    </form>
</section>

