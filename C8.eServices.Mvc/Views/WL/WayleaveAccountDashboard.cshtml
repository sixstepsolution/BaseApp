                                                                                    <td style="width:10% !important">
                                                                                        @app.account_number
                                                                                    </td>
                                                                                    <td style="width:10% !important">
                                                                                        @app.userType
                                                                                    </td>
                                                                                    <td style="width:10% !important">
                                                                                        @app.companyFullName
