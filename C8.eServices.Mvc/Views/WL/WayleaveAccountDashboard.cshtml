                                                                                <tr style="border-collapse:collapse;">
                                                                                    <td style="width:13% !important">
                                                                                        <a onclick="goesToWayleaveAccount(@app.account_number)"
                                                                                           style="cursor: pointer;"
                                                                                           class="ggb-a"><u> @app.account_id</u></a>
                                                                                    </td>
                                                                                    <td style="width:15% !important">
                                                                                        @app.account_number
